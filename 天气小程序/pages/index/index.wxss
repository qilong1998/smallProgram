/* pages/index/index.wxss */
.container{
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}
.detail{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.regions{
  display: flex;
  flex-direction: row;
}
.regions>picker{
  padding: 2upx 5upx;
  font-weight: bold;
}
.bar{
  display: flex;
  flex-direction: row;
  margin: 20rpx 0;
}
.box{
  width: 33.33%;
  text-align: center;
}
text{
  font-size: 81rpx;
  color: #3c5f81;
}
image{
  width: 260rpx;
  height: 260rpx;
}